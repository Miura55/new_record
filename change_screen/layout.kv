#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
	transition: FadeTransition()
	MainScreen:
	AnotherScreen:

<MainScreen>:
	name: "main"
    labeldatetime: exnumber
    # username: usernamelabel
    buttoncount: buttoncountval
    # buttonquit:quitbutton
    # nametext: text_box
    # agetext: age_text
	Button:
        color: 0,0,1,1
        font_size: 25
        size_hint: 0.3, 0.2
		on_release: app.root.current = "other"
		text: "Next Screen"
        pos_hint: {"right":1, "top":1}
	get_Info
    Button:
		id: buttoncountval
        font_size: 25
        center_x: (root.width/2)
        size_hint: 0.15, 0.1
        top: root.top-270
        text: 'Start'

    #Labeldatetime
    Label:
        id: usernamelabel
        font_size: 25
        center_x: (root.width/4)
        size_hint: 0.15, 0.1
        top: root.top-90
        text:'name'
    Label:
        id: exnumber
        font_size: 25
        center_x: (root.width/4)
        size_hint: 0.15, 0.1
        top: root.top-180
        text:'experiment number'

    #TextInput
    TextInput:
        id: text_box
        size_hint: 0.3, 0.08
        center_x: (root.width/2)
        font_size: 25
        top: root.top-90
        focus: True
        on_text_validate: root.buttonClicked()

    TextInput:
        id: age_text
        size_hint: 0.3, 0.08
        center_x: (root.width/2)
        font_size: 25
        top: root.top-180
        focus: True
        on_text_validate: root.buttonClicked()


<AnotherScreen>:
	name: "other"

	FloatLayout:
		Button:
			color: 0,1,0,1
			font_size: 25
			size_hint: 0.3,0.2
			text: "Back Home"
			on_release: app.root.current = "main"
			pos_hint: {"right":1, "top":1}

        BoxLayout:
            size_hint: 0.4, 0.6
            top: root.top-300
            Graph:
                id: graph
                xlabel: ""
                ylabel: "Level"
        BoxLayout:
            size_hint: [1, .2]
            orientation: "horizontal"
            Button:
                text: "START"
                bold: True
                on_press: root.start()
            Button:
                text: "STOP"
                bold: True
                on_press: root.stop()
